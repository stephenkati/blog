<div class="p-4 flex flex-col gap-8 items-center">

  <%= render "shared/user", user: @user %>
  
  <div class="w-full max-w-md p-2 min-h-min border-2"> <%= @user.bio %> </div>

  <div class="flex flex-col gap-2">
    <% @latest_posts.each do |post| %>
      <%= render "shared/post", post: post, user: @user %>
    <% end %>
  </div>

  <div>
    <%= link_to "See all Posts", user_posts_path(@user) %>
  </div>

</div>

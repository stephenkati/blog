<div class="flex flex-col gap-2 w-full items-center p-2 users">

  <div>
    <% if user_signed_in? %> 
      <h1> Hi <%= current_user.email %> </h1> 
      <%= button_to "Sign out", destroy_user_session_path, method: :delete %> 
    <% else %>
      <%= button_to "Sign in", new_user_session_path %> 
    <% end %>
  </div>

  <% @users.each do |user| %>

    <%= render "shared/user", user: user %>

  <% end %>
</div>

<div class="flex flex-col items-center bg-indigo-400 rounded-lg p-4 justify-between mt-4">
  <h2>Change your password</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class:"flex flex-col items-center gap-1" } ) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="field">
      <%= f.label :password, "New password" %><br />
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em><br />
      <% end %>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "bg-blue-800 text-white rounded-full p-2 border-none " %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, "Confirm new password" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "bg-blue-800 text-white rounded-full p-2 border-none " %>
    </div>

    <div class="actions">
      <%= f.submit "Change my password", class: "bg-blue-800 hover:bg-blue-950 text-white text-primary px-4 py-2 text-xl rounded-lg" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
